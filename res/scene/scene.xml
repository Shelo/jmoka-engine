<scene xmlns="http://www.mokadev.com/scene">
    <entity name="GeneralController"
        position="0, 0"
        rotation="0"
        layer="0">

        <Camera />

    </entity>

    <entity name="Cursor"
        position="0, 0"
        size="100, 100"
        layer="3"
        rotation="0">

        <Interval
            trigger="com.moka.triggers.CursorTriggers.MoveToCursor" />

    </entity>

    <entity name="Player"
        position="${@screen_width / 2}, 400"
        rotation="0"
        size="64, 64"
        layer="2">

        <Sprite texture="res/images/minship.png" />

        <DirectionalMovement
            speed="300"
            lockDirection="HORIZONTAL"
            ignoreRotation="true" />

        <PlatformerController />
        <AABBCollider />

    </entity>

    <entity name="Floor"
        group="Floor"
        position="${@screen_width / 2}, 50"
        rotation="0"
        size="@screen_width, 100">

        <Sprite texture="res/images/green-tile.png" />
        <AABBCollider />

    </entity>

    <entity name="Floor2"
        group="Floor"
        position="${@screen_width / 2}, 150"
        rotation="0"
        size="100, 100">

        <Sprite texture="res/images/green-tile.png" />
        <AABBCollider />

    </entity>

    <entity name="Floor3"
        group="Floor"
        position="350, 250"
        rotation="0"
        size="100, 100">

        <Sprite texture="res/images/green-tile.png" />
        <AABBCollider />

    </entity>

</scene>
