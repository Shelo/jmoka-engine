<scene xmlns="http://www.mokadev.com/scene">
    <entity
        name="GeneralController"
        position="0, 0"
        rotation="0"
        layer="0">

        <Camera />

    </entity>

    <entity position="$(@screenWidth / 2), $(@screenHeight / 2)"
        rotation="0"
        layer="0"
        name="Background">

        <Sprite texture="@background" />

    </entity>

    <entity position="$(@screenWidth / 2), @playerPosY"
        rotation="90"
        name="Player">

        <Sprite texture="@playerPlane" />

        <PlayerMovement
            speed="200"
            boundLeft="0"
            boundRight="$(@screenWidth)" />

        <Shooting
            button="fire"
            bulletPrefab="@bulletPrefab"
            trigger="example.PlayerTriggers.FireTrigger"/>

    </entity>

    <include
        path="res/scene/prefabs/enemy1.xml"
        position="$(@screenWidth / 2 - @screenWidth / 5), @screenHeight"
        name="Enemy1" />

    <include
        path="res/scene/prefabs/enemy1.xml"
        position="$(@screenWidth / 2), @screenHeight"
        name="Enemy2" />

    <include
        path="res/scene/prefabs/enemy1.xml"
        position="$(@screenWidth / 2 + @screenWidth / 5), @screenHeight"
        name="Enemy3" />
</scene>
