<scene xmlns="http://www.moka-dev.com/scene">
    <entity name="MainCamera" position="0, 0" rotation="0">
        <Camera />
    </entity>

    <entity
            layer="@layer_sky" rotation="0" name="Sky" size="@screen_width, @screen_height"
            position="${@screen_width / 2}, ${@screen_height / 2}">

        <Sprite texture="@image_sky"/>
    </entity>

    <entity position="-5, ${@screen_height / 2}" rotation="0" name="LeftBox" size="10, @screen_height">
        <AABBCollider/>
    </entity>

    <include path="res/scene/entities/stick_player.xml" name="Player" />
    <include path="res/scene/entities/ground.xml" name="Ground"/>
</scene>
