<scene xmlns="http://www.mokadev.com/scene">
    <entity name="GeneralController"
        position="0, 0"
        rotation="0"
        layer="0">

        <Camera />

    </entity>

    <entity name="Cursor"
        position="0, 0"
        size="100, 100"
        layer="3"
        rotation="0">

        <Interval
            trigger="com.moka.triggers.CursorTriggers.MoveToCursor" />

    </entity>

    <entity name="Background"
        position="$(@screenWidth / 2), $(@screenHeight / 2)"
        size="$(@screenWidth), $(@screenHeight)"
        rotation="0">

        <Sprite
            texture="res/images/background0.png" />

    </entity>

    <entity name="Player"
        position="$(@screenWidth / 2), 400"
        rotation="0"
        size="32,32"
        layer="2">

        <Sprite
            texture="res/images/minship.png" />

        <DirectionalMovement
            speed="300"
            lockDirection="HORIZONTAL"
            ignoreRotation="true" />

        <PlatformerController />
        <AABBCollider />

    </entity>

    <entity
        name="Floor"
        position="$(@screenWidth / 2), 32"
        rotation="0"
        group="Floor"
        size="$(@screenWidth), 64">

        <Sprite texture="res/images/green-tile.png" />
        <AABBCollider />

    </entity>

</scene>
