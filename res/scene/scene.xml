<scene xmlns="http://www.mokadev.com/scene">
    <entity name="MainCamera"
        position="0, 0"
        rotation="0"
        layer="0" >

        <Camera />

    </entity>

    <entity name="Cursor"
        position="0, 0"
        rotation="0" >

        <Interval
            trigger="com.moka.triggers.CursorTriggers.moveToCursor" />

    </entity>

    <entity name="Background"
        position="${@screen_width / 2}, ${@screen_height / 2}"
        size="${@screen_width}, ${@screen_height}"
        rotation="0" >

        <Sprite
            texture="res/images/green-tile.png" />

        <LookAt
            target="Player" />

    </entity>

    <entity name="Player"
        position="150, ${@screen_height / 2}"
        rotation="0"
        size="125, 125"
        layer="2">

        <Sprite
            texture="res/images/ship.png" />

        <DirectionalMovement
            speed="300"
            ignoreRotation="true" />

        <LookAt
            target="Cursor" />

        <Shooting
            bulletPrefab="@bullet_prefab"
            button="fire" />

    </entity>
</scene>
