<scene xmlns="http://www.mokadev.com/scene">
    <entity name="GeneralController"
        position="0, 0"
        rotation="0"
        layer="0" >

        <Camera />
        <EnemyMovementController />

    </entity>

    <entity name="Cursor"
        position="0, 0"
        size="100, 100"
        layer="3"
        rotation="0" >

        <Interval
            trigger="com.moka.triggers.CursorTriggers.MoveToCursor" />

    </entity>

    <entity name="Player"
        position="${@screen_width / 2}, 100"
        rotation="0"
        size="64, 64"
        layer="2">

        <Sprite
            texture="res/images/minship.png" />

        <DirectionalMovement
            speed="300"
            lockDirection="HORIZONTAL"
            ignoreRotation="true" />

        <Shooting
            bulletPrefab="@bullet_prefab"
            trigger="example.PlayerTriggers.FireTrigger"
            button="fire" />

    </entity>

    <include
        name="Enemy1"
        path="res/scene/prefabs/enemy.xml"
        position="${@screen_width / 2 - 100}, ${@screen_height - 100}" />

    <include
        name="Enemy2"
        path="res/scene/prefabs/enemy.xml"
        position="${@screen_width / 2}, ${@screen_height - 100}" />

    <include
        name="Enemy3"
        path="res/scene/prefabs/enemy.xml"
        position="${@screen_width / 2 + 100}, ${@screen_height - 100}" />
</scene>
