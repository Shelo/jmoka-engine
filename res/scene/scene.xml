<scene xmlns="http://www.mokadev.com/scene">
    <entity name="MainCamera"
        position="0, 0"
        rotation="0"
        layer="0" >

        <Camera />

    </entity>

    <entity name="Cursor"
        position="0, 0"
        size="100, 100"
        layer="3"
        rotation="0" >

        <Interval
            trigger="com.moka.triggers.CursorTriggers.MoveToCursor" />

    </entity>

    <entity name="Player"
        position="${@screen_width / 2}, 100"
        rotation="0"
        size="64, 64"
        layer="2">

        <Sprite
            texture="res/images/minship.png" />

        <DirectionalMovement
            speed="300"
            lockDirection="HORIZONTAL"
            ignoreRotation="true" />

        <Shooting
            bulletPrefab="@bullet_prefab"
            trigger="example.PlayerTriggers.FireTrigger"
            button="fire" />

    </entity>

    <entity name="Enemy1"
        position="${@screen_width / 2}, ${@screen_height - 100}"
        rotation="0"
        size="64, 64"
        layer="2">

        <Sprite
            texture="res/images/minship2.png" />

        <AABBCollider />

    </entity>
</scene>
