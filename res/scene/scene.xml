<scene xmlns="http://www.moka-dev.com/scene">
    <entity name="MainCamera" position="0, 0, 0" rotation="0" scale="1, 1">
        <Camera />
    </entity>

    <entity position="180, 240, 0" rotation="0" scale="1, 1" name="Sky">
        <Sprite texture="res/images/sky.png"/>
    </entity>

    <entity position="180, 50, 1" rotation="180" scale="1, 1" name="Plane">
        <Sprite texture="res/images/plane.png" />

        <Controllable
                topSpeed="500"
                acceleration="50" />

        <Bounded
                left="0"
                right="360"
                top="100"
                bottom="0" />
    </entity>

    <include path="res/scene/entities/ball.xml" position="0, 0, 0" name="Ball1" />
    <include path="res/scene/entities/ball.xml" position="100, 100, 0" name="Ball2" />
    <include path="res/scene/entities/ball.xml" position="300, 100, 0" name="Ball3" />
    <include path="res/scene/entities/ball.xml" position="100, 300, 0" name="Ball4" />
</scene>
