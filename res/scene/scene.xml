<scene xmlns="http://www.mokadev.com/scene">
    <entity name="GeneralController"
        position="0, 0"
        rotation="0"
        layer="0">

        <Camera />
        <SpotOn
            target="Player"
            bottom="0"
            left="0" />

    </entity>

    <entity name="Cursor"
        position="0, 0"
        size="0, 0"
        layer="3"
        rotation="0">

        <Interval
            trigger="com.moka.triggers.CursorTriggers.MoveToCursor" />

    </entity>

    <entity name="Player"
        position="${@screen_width / 2}, 400"
        rotation="0"
        size="64,64"
        layer="2">

        <Sprite texture="res/images/minship.png" />

        <DirectionalMovement
            speed="300"
            lockDirection="HORIZONTAL"
            ignoreRotation="true" />

        <PlatformerController />
        <AABBCollider />

    </entity>

    <include name="Floor1"
        path="res/scene/prefabs/floor.xml"
        position="${@screen_width / 2}, 50"
        size="@screen_width, 100" />

    <include name="Floor2"
        path="res/scene/prefabs/floor.xml"
        position="200, 200"
        size="100, 100" />

</scene>
