<scene xmlns="http://www.mokadev.com/scene">
    <entity
        name="GeneralController"
        position="0, 0"
        rotation="0"
        layer="0">

        <Camera />

    </entity>

    <entity position="$(@screenWidth / 2), $(@screenHeight / 2)"
        rotation="0"
        layer="0"
        name="Background">

        <Sprite texture="@background" />

    </entity>

    <entity position="$(@screenWidth / 2), @playerPosY"
        rotation="90"
        name="Player">

        <Sprite texture="@playerPlane" />

        <PlayerMovement
            speed="200"
            boundLeft="0"
            boundRight="$(@screenWidth)" />

        <Shooting
            button="fire"
            bulletPrefab="@prefabBullet"
            trigger="example.PlayerTriggers.FireTrigger"/>

    </entity>

    <!-- First four planes. -->
    <include
        path="@prefabEnemy2"
        position="30, @screenHeight" />

    <include
        path="@prefabEnemy2"
        position="$(@screenWidth - 30), @screenHeight" />

    <include
        path="@prefabEnemy2"
        position="130, @screenHeight" />

    <include
        path="@prefabEnemy2"
        position="$(@screenWidth - 130), @screenHeight" />

    <!-- Second: first row of curved movement planes. -->
    <include
        path="@prefabEnemy1"
        position="$(@screenWidth / 2 - @screenWidth / 5), $(@screenHeight + 100)" />

    <include
        path="@prefabEnemy1"
        position="$(@screenWidth / 2), $(@screenHeight + 100)" />

    <include
        path="@prefabEnemy1"
        position="$(@screenWidth / 2 + @screenWidth / 5), $(@screenHeight + 100)" />

    <!-- Second: second row of curved movement planes. -->
    <include
        path="@prefabEnemy3"
        position="$(@screenWidth / 2 - @screenWidth / 5), $(@screenHeight + 200)" />

    <include
        path="@prefabEnemy3"
        position="$(@screenWidth / 2), $(@screenHeight + 200)" />

    <include
        path="@prefabEnemy3"
        position="$(@screenWidth / 2 + @screenWidth / 5), $(@screenHeight + 200)" />
</scene>
